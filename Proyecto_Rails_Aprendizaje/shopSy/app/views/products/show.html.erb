<%= javascript_include_tag "turbo", type: "module" %>
<%= image_tag @product.photo, width:150 if @product.photo.attached? %>
<h1> <%= @product.title%> </h1>
<p><%=@product.description %></p>
<span>$ <%= @product.price %></span>

<%= link_to 'Editar Producto', edit_product_path(@product)%>
<%= link_to 'Eliminar Producto', product_path(@product), data: {turbo: true, turbo_method: :delete, turbo_confirm: '¿Estás seguro?'} %>
